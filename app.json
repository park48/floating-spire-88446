{
  "name": "Team.com",
  "description": "This app does one little thing, and does it well.",
  "keywords": [
    "productivity",
    "HTML5",
    "scalpel"
  ],

  "repository": "https://github.com/park48/limitless-taiga-32400",

  "success_url": "/",
  "scripts": {
      "postdeploy": "php artisan migrate"
    },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/php",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "12"
      }
    },
    {
      "plan": "sendgrid",
      "options": {
        "version": "9.5"
      }
    }
  ],
  "buildpacks": [
    {
      "url":"heroku/php"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "bundle exec rake test"
      }
    }
  }
}
